    name = "add-golden-tz",
    outs = ["add-golden-tz.js"],
    args = [
        "--golden",
        "--polyfill",
        "$(rootpaths :zdumps)",
    ],
    data = [
        "src/packer.ts",
        "src/types.ts",
        ":node_modules/@formatjs/ecma402-abstract",
        ":zdumps",
        "//:node_modules/@types/json-stable-stringify",
        "//:node_modules/json-stable-stringify",
    ],
    entry_point = "scripts/process-zdump.ts",
)

