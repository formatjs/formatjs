load("@npm//:defs.bzl", "npm_link_all_packages")
load("@rules_rust//rust:defs.bzl", "rust_test")
load("//tools:index.bzl", "generate_src_file")

npm_link_all_packages()

TEST_CASES = glob(["test_cases/*"])

# Generate a separate Rust test target for each test case file
[rust_test(
    name = "rust_test_%s" % f.split("/")[-1].replace(".txt", "").replace("-", "_"),
    srcs = ["integration_tests.rs"],
    data = [f],
    env = {
        "TEST_FILE": f.split("/")[-1],
    },
    deps = [
        "//packages/icu-messageformat-parser/rust:icu_messageformat_parser",
        "@crates//:pretty_assertions",
        "@crates//:serde_json",
    ],
) for f in TEST_CASES]

