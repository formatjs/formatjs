    name = "gen_parser_test_%s" % f.split("/")[-1],
    src = f,
    args = [
        "--input %s/%s" % (
            package_name(),
            f,
        ),
    ],
    data = [
        ":node_modules/@formatjs/icu-messageformat-parser",
        "//:node_modules/lodash-es",
        f,
    ],
    entry_point = "run-parser.ts",
) for f in TEST_CASES]

# WASM integration test
vitest(
    name = "wasm_integration_test",
    srcs = ["wasm-integration.test.ts"],
    fixtures = TEST_CASES + [
        "//packages/icu-messageformat-parser-wasm:pkg",
    ],
    deps = [
