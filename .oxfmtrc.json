{
  "$schema": "./node_modules/oxfmt/configuration_schema.json",
  "arrowParens": "avoid",
  "bracketSpacing": false,
  "endOfLine": "lf",
  "semi": false,
  "singleQuote": true,
  "trailingComma": "es5",
  "printWidth": 80,
  "ignorePatterns": [
    ".cache",
    ".claude",
    "bazel-out",
    "dist",
    "locale-data",
    "packages/*/CHANGELOG.md",
    "packages/babel-plugin-formatjs/options.ts",
    "packages/intl-datetimeformat/src/data/",
    "packages/intl-getcanonicallocales/src/data/",
    "packages/intl-numberformat/src/data/",
    "packages/ecma402-abstract/src/NumberFormat/digit-mapping.json",
    "packages/cli-lib/tests/extract/typescript/err.tsx",
    "test262*",
    "test262/",
    "website/.docusaurus",
    "website/.now",
    "website/build",
    "website/CHANGELOG.md",
    "packages/intl-segmenter/unicodeFiles/*",
    "packages/cli/integration-tests/extract/typescript/err.tsx",
    "**/*.generated.*",
    "**/__snapshots__/*",
    "**/CHANGELOG.md",
    "package.json",
    "**/package.json",
    "target",
    ".vscode"
  ]
}
