{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es6", "dom", "esnext.intl", "es2017.intl", "es2018.intl"],
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "preserveConstEnums": true,
    "allowSyntheticDefaultImports": true,
    "noFallthroughCasesInSwitch": true,
    "composite": true,
    "sourceMap": true,
    "jsx": "react",
    "baseUrl": ".",
    "paths": {
      "@formatjs/*": ["packages/*"],
      "formatjs-extract-cldr-data": ["packages/formatjs-extract-cldr-data"],
      "intl-messageformat-parser": ["packages/intl-messageformat-parser"],
      "intl-messageformat": ["packages/intl-messageformat"]
    }
  },
}
