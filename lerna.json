{
  "registry": "https://registry.npmjs.org/",
  "version": "independent",
  "command": {
    "version": {
      "conventionalCommits": true,
      "message": "build: publish",
      "private": false,
      "exact": true,
      "createRelease": "github",
      "ignoreChanges": ["**/tests/**", "**/*.md"]
    },
    "run": {
      "stream": true
    }
  },
  "packages": ["packages/*"]
}
